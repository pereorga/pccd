{
    "extends": [
        "web-recommended"
    ],
    "connector": {
        "name": "puppeteer",
        "options": {
            "headless": true
        }
    },
    "formatters": [
        "stylish"
    ],
    "ignoredUrls": [
        {
            "domain": ".*\\.googletagmanager\\.com/.*",
            "hints": ["*"]
        },
        {
            "domain": ".*\\.google-analytics\\.com/.*",
            "hints": ["*"]
        }
    ],
    "hints": {
        "compat-api/css": [
            "error",
            {
                "ignore": [
                    "-webkit-tap-highlight-color",
                    "-webkit-text-size-adjust",
                    "accent-color",
                    "overscroll-behavior-y"
                ]
            }
        ],
        "compat-api/html": [
            "error",
            {
                "ignore": [
                    "input[autocapitalize]",
                    "meta[name=theme-color]"
                ]
            }
        ]
    }
}
