# For more information about the properties used in
# this file, please see the EditorConfig documentation:
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.neon]
indent_size = 2

[*.nix]
indent_size = 2

[{*.json,traffic-advice}]
indent_size = 2

[*.{yml,yaml,yamlfmt}]
indent_size = 2

[*.xml]
indent_size = 2
