{
  "name": "dites.cat/pccd",
  "description": "Paremiologia catalana comparada digital",
  "license": "AGPL-3.0-only",
  "type": "project",
  "keywords": [
    "catalan",
    "català",
    "common voice",
    "diccionari",
    "dites populars",
    "frases fetes",
    "idioms",
    "locucions",
    "online dictionary",
    "paremiologia",
    "paremiotipus",
    "parèmies",
    "proverbs",
    "proverbis",
    "refranys"
  ],
  "readme": "README.md",
  "authors": [
    {
      "name": "Pere Orga Esteve",
      "email": "pere@orga.cat",
      "homepage": "https://orga.cat",
      "role": "Developer"
    }
  ],
  "homepage": "https://pccd.dites.cat",
  "require": {
    "php": ">=8.2",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "ext-curl": "*",
    "ext-gd": "*",
    "ext-imagick": "*",
    "longxinh/xhprof": "dev-master",
    "noisebynorthwest/php-spx": "dev-master",
    "pereorga/pccd-lt-filter": "dev-master",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-deprecation-rules": "^1.1",
    "phpstan/phpstan-strict-rules": "^1.5",
    "phpunit/phpunit": "^10.4",
    "psalm/plugin-phpunit": "^0.18.4",
    "rector/rector": "^0.18.5",
    "tideways/php-xhprof-extension": "dev-master",
    "vimeo/psalm": "^5.15"
  },
  "suggest": {
    "ext-apcu": "Increases website performance (strongly encouraged in the web server)",
    "ext-intl": "Required in the web server currently for only some tests",
    "ext-pdo": "Required in the web server",
    "ext-pdo-mysql": "Required in the web server",
    "ext-xhprof": "Xhprof may be used as a simple proofiler in development instances",
    "ext-zend-opcache": "Increases website performance (strongly encouraged in the web server)"
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "pereorga/pccd-lt-filter",
        "version": "dev-master",
        "source": {
          "type": "git",
          "url": "https://github.com/pereorga/pccd-lt-filter.git",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "noisebynorthwest/php-spx",
        "version": "dev-master",
        "source": {
          "type": "git",
          "url": "https://github.com/NoiseByNorthwest/php-spx.git",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "longxinh/xhprof",
        "version": "dev-master",
        "source": {
          "type": "git",
          "url": "https://github.com/longxinH/xhprof.git",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "tideways/php-xhprof-extension",
        "version": "dev-master",
        "source": {
          "type": "git",
          "url": "https://github.com/tideways/php-xhprof-extension.git",
          "reference": "master"
        }
      }
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "composer-normalize": "tools/composer-normalize",
    "parallel-lint": "tools/parallel-lint --exclude vendor --exclude node_modules --exclude tmp .",
    "phan": "tools/phan --allow-polyfill-parser",
    "php-cs-fixer": "tools/php-cs-fixer fix --diff --verbose",
    "php-cs-fixer-lint": "tools/php-cs-fixer fix --verbose --dry-run --stop-on-violation",
    "phpcbf": "tools/phpcbf -p --standard=phpcs.xml .",
    "phpcpd": "tools/phpcpd --exclude src/vendor --fuzzy docroot src tests",
    "phpcs": "tools/phpcs -p --standard=phpcs.xml .",
    "phpstan": "vendor/bin/phpstan analyse --memory-limit=256M",
    "phpunit": "vendor/bin/phpunit --fail-on-warning --display-warnings",
    "psalm": "vendor/bin/psalm --no-cache",
    "psalm-taint-analysis": "vendor/bin/psalm --no-cache --taint-analysis",
    "rector": "vendor/bin/rector process",
    "rector-lint": "vendor/bin/rector process --dry-run",
    "yaml-lint": "tools/yaml-lint *.yml .*.yml .yamlfmt"
  }
}
