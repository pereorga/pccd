{
  "name": "pccd",
  "private": true,
  "description": "Paremiologia catalana comparada digital",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/Softcatala/pccd.git"
  },
  "author": "Pere Orga Esteve <pere@orga.cat>",
  "homepage": "https://pccd.dites.cat",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "analysis": "concurrently -g --timings 'yarn:analysis:*'",
    "analysis:phan": "tools/composer run phan",
    "analysis:phpcd": "tools/composer run phpcpd",
    "analysis:phpstan": "tools/composer run phpstan",
    "analysis:psalm": "tools/composer run psalm && tools/composer run taint-analysis",
    "build:assets": "scripts/build_assets.sh",
    "check:certificate": "scripts/check_certificate.sh",
    "check:code": "tools/composer run parallel-lint && concurrently -g --timings yarn:lint yarn:analysis yarn:format",
    "check:sitemap": "scripts/check_sitemap.sh",
    "clean:temp": "find tmp/ -type f \\( -name '*.html' -o -name '*.json' \\) -delete",
    "export:code": "yarn run clean:temp && scripts/export-code.sh",
    "export:cv": "scripts/common-voice-export/export.sh",
    "format": "concurrently -g --timings 'yarn:format:*'",
    "format:bash": "find scripts -type f -name '*.sh' -exec shfmt --list --write --case-indent --space-redirects --simplify --indent 4 {} \\;",
    "format:composer": "tools/composer run composer-normalize",
    "format:php": "PHP_CS_FIXER_IGNORE_ENV=1 tools/composer run php-cs-fixer",
    "format:prettier": "prettier --write .",
    "lint": "concurrently -g --timings 'yarn:lint:*'",
    "lint:bash": "find scripts -type f -name '*.sh' -exec shellcheck {} \\;",
    "lint:config-prettier": "eslint-config-prettier 'src/js/*.js' 'scripts/*.js'",
    "lint:css": "stylelint src/css/",
    "lint:docker": "hadolint .docker/*Dockerfile",
    "lint:editorconfig": "editorconfig-checker",
    "lint:js": "eslint --fix 'src/js/*.js' 'scripts/*.js'",
    "lint:markdown": "markdownlint README.md",
    "lint:php": "tools/composer run phpcs",
    "lint:yaml": "yamllint .",
    "optimize:svg": "svgo --multipass -r --folder docroot/img",
    "outdated": "concurrently -g --timings 'yarn:outdated:*'",
    "outdated:composer": "tools/composer outdated --direct",
    "outdated:phive": "tools/phive outdated",
    "outdated:yarn": "yarn outdated",
    "test": "concurrently --kill-others-on-fail -g --timings 'yarn:test:*' && yarn run check:certificate",
    "test:e2e": "cypress run",
    "test:functional": "scripts/functional-tests.js",
    "test:lighthouse": "scripts/audit_website.sh",
    "test:phpunit": "tools/composer run phpunit",
    "test:validate": "scripts/validate_website.sh",
    "update": "concurrently -g --timings 'yarn:update:*(!os-packages)'",
    "update-all": "concurrently -g --timings 'yarn:update:*(!yarn)' 'yarn:update-yarn-deps'",
    "update-yarn-deps": "yarn upgrade --silent",
    "update:apc-gui": "scripts/update.sh apc-gui",
    "update:composer": "scripts/update.sh composer",
    "update:docker": "concurrently --restart-tries -1 'scripts/update.sh docker'",
    "update:mvn": "scripts/update.sh mvn",
    "update:opcache-gui": "scripts/update.sh opcache-gui",
    "update:os-packages": "scripts/update.sh os-packages",
    "update:pecl": "scripts/update.sh pecl",
    "update:phive": "scripts/update.sh phive",
    "update:yarn": "scripts/update.sh yarn"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.12",
    "clean-css-cli": "^5.6.2",
    "concurrently": "^7.6.0",
    "cypress": "^12.7.0",
    "editorconfig-checker": "^5.0.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-compat": "^4.1.2",
    "eslint-plugin-unicorn": "^46.0.0",
    "hint": "^7.1.3",
    "html-validate": "^7.13.3",
    "htmlhint": "^1.1.4",
    "lighthouse": "^10.0.2",
    "linkinator": "^4.1.2",
    "markdownlint-cli": "^0.33.0",
    "prettier": "^2.8.4",
    "prettier-plugin-package": "^1.3.0",
    "stylelint": "^15.2.0",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard": "^30.0.1",
    "svgo": "^3.0.2",
    "sync-fetch": "^0.4.2",
    "terser": "^5.16.6"
  }
}
